<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="56.0dip"
    android:paddingTop="16.0dip"
    android:paddingEnd="8.0dip"
    android:paddingBottom="8.0dip">

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16.0dip"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.Material.Subhead"
        android:textColor="?android:textColorPrimary" />

    <SeekBar
        android:id="@android:id/runtime"
        style="@android:style/Widget.Material.SeekBar.Discrete"
        android:layout_width="fill_parent"
        android:layout_height="70.0dip"
        android:layout_below="@android:id/title"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="-20.0dip"
        android:layout_marginBottom="-28.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@android:id/runtime"
        android:orientation="horizontal"
        android:paddingBottom="8.0dip">

        <TextView
            android:id="@android:id/text1"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center|top"
            android:layout_marginStart="16.0dip"
            android:layout_weight="1.0"
            android:gravity="start"
            android:text="@string/assist_gesture_squeeze_help_maximum_sensitivity" />

        <TextView
            android:id="@android:id/text2"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center|top"
            android:layout_marginEnd="16.0dip"
            android:layout_weight="1.0"
            android:gravity="end"
            android:text="@string/assist_gesture_squeeze_help_minimum_sensitivity" />
    </LinearLayout>
</RelativeLayout>